<?xml version="1.0"?>
<robot name="simple_rover">

  <!-- Base link -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="1.0" />
      <inertia ixx="1" iyy="1" izz="1" ixy="0" ixz="0" iyz="0" />
    </inertial>
  </link>

  <!-- Laser link -->
  <link name="laser">
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.1" />
      <inertia ixx="1" iyy="1" izz="1" ixy="0" ixz="0" iyz="0" />
    </inertial>
  </link>

  <!-- Static transform from base_link â†’ laser -->
  <joint name="laser_joint" type="fixed">
    <parent link="base_link" />
    <child link="laser" />
    <!-- YOU MUST ADJUST XYZ TO MATCH REAL POSITION -->
    <!-- Example: lidar is 12cm forward, 0cm left, 25cm high -->
    <origin xyz="0.12 0 0.25" rpy="0 0 0" />
  </joint>

</robot>
