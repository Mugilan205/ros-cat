<?xml version="1.0"?>
<robot name="simple_rover">

  <!-- Base link -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="1.0" />
      <inertia ixx="1" iyy="1" izz="1" ixy="0" ixz="0" iyz="0" />
    </inertial>
  </link>

  <!-- Laser link -->
  <link name="laser_frame"/>

  <!-- Static transform from base_link â†’ laser -->
  <joint name="laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="laser_frame"/>
    <!-- <origin xyz="0.12 0 0.12" rpy="0 0 0"/> -->
    <origin xyz="0.20 0 0.20" rpy="0 0 0"/> 
  </joint>

</robot>
